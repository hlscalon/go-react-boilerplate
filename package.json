{
  "name": "go-react-boilerplate",
  "version": "1.0.0",
  "description": "simple application to demonstrate go and react integration",
  "main": "static/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "css-deploy": "npm run css-build && npm run css-postcss",
    "css-build": "node-sass static/styles/scss -o static/styles/css",
    "css-postcss": "postcss --use autoprefixer --dir static/styles/css/ static/styles/css/",
    "css-watch": "npm run css-build -- --watch",
    "build": "npm run css-deploy && webpack --mode development",
    "build-prod": "npm run css-deploy && webpack --mode production"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hlscalon/go-react-boilerplate.git"
  },
  "author": "hlscalon",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hlscalon/go-react-boilerplate/issues"
  },
  "homepage": "https://github.com/hlscalon/go-react-boilerplate#readme",
  "dependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "autoprefixer": "^9.7.4",
    "babel-loader": "^8.0.6",
    "bulma": "^0.8.0",
    "css-loader": "^3.4.2",
    "node-sass": "^4.13.1",
    "postcss-cli": "^7.1.0",
    "style-loader": "^1.1.3",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11"
  }
}
